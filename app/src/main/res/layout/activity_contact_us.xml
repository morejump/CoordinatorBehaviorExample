<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="saulmm.myapplication.ContactUs">
    <TextView
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:text="Reply email address"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edtEmail"
        android:padding="16dp"
        android:background="#E4E9ED"
        android:layout_width="match_parent"
        android:layout_height="48dp" />
    <TextView
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:text="Subject line(up to 50 chacracters)"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edtSubject"
        android:padding="16dp"
        android:background="#E4E9ED"
        android:layout_width="match_parent"
        android:layout_height="48dp" />
    <TextView
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:text="description(up to 240 chacracters)"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edtDescription"
        android:gravity="start"
        android:padding="16dp"
        android:background="#E4E9ED"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="128dp" />
    <Button
        android:id="@+id/btnSend"
        android:text="SEND"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:background="#38A8F5"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp" />


</LinearLayout>
